            <Button fx:id="exitButton" layoutX="150.0" layoutY="340.0" mnemonicParsing="false" onMouseClicked="#onClickReturnButton" prefWidth="100.0" text="Create User" visible="true">
               <font>
                  <Font size="15.0" />
               </font></Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
